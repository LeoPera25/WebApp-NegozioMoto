<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MotoVeloce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp_NegozioMoto.styles.css" asp-append-version="true"/>
    <style>
        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: 1px;
        }
        
        .category-buttons {
            padding: 2rem 0;
            background-color: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 2rem;
        }
        
        .category-button {
            padding: 12px 25px;
            margin: 0 10px;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-moto {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        
        .btn-abbigliamento {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }
        
        .btn-accessori {
            background-color: #28a745;
            border-color: #28a745;
        }
        
        .hero-section {
            background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/api/placeholder/1200/400');
            background-size: cover;
            background-position: center;
            padding: 100px 0;
            margin-bottom: 40px;
            color: white;
            text-align: center;
        }
        
        .footer {
            padding: 25px 0;
            background-color: #212529;
            color: white !important;
        }
        
        .footer a {
            color: #adb5bd;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left side of navbar -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Home" asp-action="Home">Home</a>
                    </li>
                </ul>
                
                <!-- Center brand logo -->
                <a class="navbar-brand mx-auto" asp-area="" asp-controller="Home" asp-action="Home">MotoVeloce</a>
                
                <!-- Right side of navbar -->
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user me-1"></i> Account
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Login">Login</a></li>
                            <li><a class="dropdown-item" href="#">Registrati</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Il mio profilo</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Cart">
                            <i class="fas fa-shopping-cart me-1"></i> Carrello
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div>
    @if (ViewData["Title"]?.ToString() == "Home" || string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
    {
        <div class="hero-section">
            <div class="container">
                <h1 class="display-3">Benvenuti in MotoVeloce</h1>
                <p class="lead mb-4">La tua destinazione per moto, abbigliamento e accessori di qualità</p>
            </div>
        </div>
        
        <div class="container text-center category-buttons">
            <h2 class="mb-4">Esplora le nostre categorie</h2>
            <div class="d-flex justify-content-center flex-wrap">
                <a asp-area="" asp-controller="Home" asp-action="ElencoMoto" class="btn btn-primary category-button btn-moto">
                    <i class="fas fa-motorcycle me-2"></i>Moto
                </a>
                <a asp-area="" asp-controller="Home" asp-action="ElencoAbbigliamento" class="btn btn-primary category-button btn-abbigliamento">
                    <i class="fas fa-tshirt me-2"></i>Abbigliamento
                </a>
                <a asp-area="" asp-controller="Home" asp-action="ElencoAccessori" class="btn btn-primary category-button btn-accessori">
                    <i class="fas fa-helmet-safety me-2"></i>Accessori
                </a>
            </div>
        </div>
    }
    
    <main role="main" class="container pb-5">
        @RenderBody()
    </main>
</div>

<footer class="text-center small text-muted py-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-auto">
                <p class="mb-1">&copy; 2025 MotoVeloce - Tutti i diritti riservati</p>
            </div>
            <div class="col-auto">
                <a href="#" class="text-decoration-none me-2">Privacy</a>
                <a href="#" class="text-decoration-none">Termini</a>
            </div>
            <div class="col-auto">
                <span class="me-2"><i class="fas fa-envelope"></i> info@motoveloce.it</span>
                <span><i class="fas fa-phone"></i> +39 02 1234567</span>
            </div>
        </div>
    </div>
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>