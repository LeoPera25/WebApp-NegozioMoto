@{
    ViewData["Title"] = "Elenco Moto";
}

<div class="container my-5">
    <header class="text-center mb-5">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <div class="badge bg-danger fs-5 mb-3">Categoria: Moto</div>
    </header>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var Item in @Model.Items)
        { 
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">@Item.marca @Item.modello</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Item.descrizione</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-success fs-6">€ @Item.prezzo</span>
                            <small class="text-muted">ID: @Item.ID_prodotto</small>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-grid gap-2">
                            <a class="btn btn-primary">Visualizza elemento</a>
                            <a class="btn btn-outline-secondary" asp-action="AggiungiAlCarrello"
                               asp-route-idCat="@Item.ID_categoria"
                               asp-route-idProd="@Item.ID_prodotto">Aggiungi al carrello</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>